---
import "@fontsource-variable/roboto-mono";
import { getLangFromUrl } from "../i18n/utils";

interface Props {
	title?: string;
	description?: string;
}

const lang = getLangFromUrl(Astro.url);
const {
	title = lang === "es"
		? "Daryl | Portfolio Personal"
		: "Daryl | Personal Portfolio",
	description = lang === "es"
		? "Ingeniero DevOps / SRE enfocado en automatizaci√≥n e infraestructura cloud."
		: "DevOps / SRE Engineer focused on automation and cloud infrastructure.",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="canonical"
			href={new URL(
				Astro.url.pathname,
				Astro.site ?? "https://daryl.sh",
			).toString()}
		/>

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg-primary: #0a0a0a;
		--bg-secondary: #141414;
		--accent-primary: #3b82f6;
		--accent-secondary: #8b5cf6;
		--text-primary: #f3f4f6;
		--text-secondary: #9ca3af;
		--glass-bg: rgba(255, 255, 255, 0.03);
		--glass-border: rgba(255, 255, 255, 0.1);
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	html,
	body {
		background-color: var(--bg-primary);
		color: var(--text-primary);
		font-family: "Roboto Mono Variable", monospace;
		height: 100%;
		width: 100%;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
	}

	h1,
	h2,
	h3,
	h4 {
		font-family: "Roboto Mono Variable", monospace;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	/* Micro-animations */
	.hover-lift {
		transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
	}
	.hover-lift:hover {
		transform: translateY(-4px);
	}

	/* Utility: Glassmorphism */
	.glass {
		background: var(--glass-bg);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid var(--glass-border);
	}
</style>
